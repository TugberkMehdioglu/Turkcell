@model ProductViewModel

@{
    ViewData["Title"] = "GetById";
}

<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary mb-2">Ürünler sayfasına git</a>

<div class="card">
    <div class="card-header">
        Ürün (@Model.Name)
    </div>
    <div class="card-body">
        <p class="card-text">
            <div>Id : @Model.Id</div>
            <div>Açıklama : @Model.Description</div>
            <div>Fiyat : @Model.Price</div>
            <div>Stok : @Model.Stock</div>
            <div>Renk : @Model.Color</div>
            <div>Süre : @Model.Expire</div>
        </p>
    </div>
</div>