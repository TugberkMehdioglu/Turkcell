@model CategoryViewModel
@{
    ViewData["Title"] = "Index";
}

@if (@ViewBag.exception != null)
{
    <div class="alert alert-danger">
        @ViewBag.exception
    </div>
}

<form asp-controller="Categry" asp-action="Add" method="post">

    <div class="mb-3">
        <label class="form-label" for="name">İsim: </label>
        <input type="text" id="name" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-success">Kategori Oluştur</button>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}